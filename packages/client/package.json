    "cross-env": "^7.0.3",
    "esbuild": "^0.8.42",
    "esbuild-jest": "^0.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.3",
    "tailwindcss-scroll-snap": "^1.0.3",
    "type-fest": "^0.20.2",
    "typescript": "4.1.3",
    "vite": "^2.0.0-beta.65"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "esbuild-jest"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./packages/client/*/tsconfig.json",
