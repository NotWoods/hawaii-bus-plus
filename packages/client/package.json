    "@hawaii-bus-plus/utils": "workspace:*",
    "@hawaii-bus-plus/vite-plugins": "workspace:*",
    "halfmoon": "^1.1.1",
    "idb": "^6.0.0",
    "mnemonist": "^0.38.1",
    "preact": "^10.5.12",
    "proposal-temporal": "^0.7.0",
