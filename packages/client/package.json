{
  "name": "@hawaii-bus-plus/client",
  "version": "5.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build page && vite build",
    "predev": "tsc --build page",
    "dev": "vite",
    "format": "prettier **/*.{ts,tsx} *.html --write --ignore-path ../../.prettierignore",
    "postformat": "eslint **/*.{ts,tsx} --fix",
    "pretest": "tsc --build page",
    "test": "jest"
  },
  "dependencies": {
    "@hawaii-bus-plus/data": "*",
    "@hawaii-bus-plus/presentation": "*",
    "@hawaii-bus-plus/promise-worker": "*",
    "@hawaii-bus-plus/react-google-maps": "*",
    "@hawaii-bus-plus/types": "*",
    "@hawaii-bus-plus/utils": "*",
    "halfmoon": "^1.1.1",
    "idb": "^6.0.0",
    "mnemonist": "^0.38.1",
    "preact": "^10.5.12",
    "proposal-temporal": "^0.7.0",
    "react-hotkeys-hook": "^3.0.3",
    "spherical-geometry-js": "^2.0.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@prefresh/vite": "^2.0.3",
    "@types/googlemaps": "^3.43.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.8.39",
    "esbuild-jest": "^0.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "type-fest": "^0.20.2",
    "typescript": "4.1.3",
    "vite": "2.0.0-beta.61"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "esbuild-jest"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./packages/client/*/tsconfig.json"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/vite.config.ts"
        ],
        "parserOptions": {
          "project": []
        }
      }
    ]
  }
}
