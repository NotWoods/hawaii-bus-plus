    "rollup": "^2.44.0",
    "tslib": "^2.2.0",
    "type-fest": "^1.0.1",
    "vite": "^2.1.5"
  },
  "devDependencies": {
    "@types/react-helmet": "^6.1.0",
    "ava": "^3.15.0",
    "preact": "^10.5.13",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./packages/prerender/*/tsconfig.json"
      ]
    }
