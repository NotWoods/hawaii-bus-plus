{
  "name": "@hawaii-bus-plus/prerender",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build src",
    "postbuild": "node src/build.js",
    "format": "prettier **/*.ts --write --ignore-path ../../.prettierignore",
