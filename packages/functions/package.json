{
  "name": "@hawaii-bus-plus/functions",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "scripts": {
    "prebuild": "tsc --build src",
    "build": "node esbuild.config.mjs",
    "postbuild": "copyfiles ../../dist/auth/done.html ../../dist/functions/auth/ --flat",
    "format": "prettier **/*.ts *.mjs --write --ignore-path ../../.prettierignore",
    "postformat": "eslint \"**/*.ts\" --fix",
    "pretest": "tsc --build test",
    "test": "ava"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.9.0",
    "@hawaii-bus-plus/gotrue": "workspace:^0.9.29",
    "@netlify/functions": "^0.8.0",
    "cookie": "^0.4.1",
    "stripe": "^8.188.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.1",
    "@types/node": "^16.11.7",
    "ava": "^3.15.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.13.13",
    "prettier": "~2.4.1",
    "typescript": "^4.4.4"
  },
  "files": [
    "src",
    "node"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./packages/functions/*/tsconfig.json"
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*.spec.{js,ts}"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
