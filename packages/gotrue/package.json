{
  "name": "@hawaii-bus-plus/gotrue",
  "description": "GoTrue API client for JavaScript",
  "version": "0.9.29",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "tsc --build src",
    "format": "prettier **/*.ts --write --ignore-path ../../.prettierignore",
    "postformat": "eslint **/*.ts --fix",
    "pretest": "tsc --build test",
    "test": "ava"
  },
  "dependencies": {
    "node-fetch": "^3.0.0-beta.9",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "ava": "^3.15.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "files": [
    "src"
  ],
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./packages/gotrue/*/tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/prefer-optional-chain": "off",
      "@typescript-eslint/prefer-regexp-exec": "off",
      "@typescript-eslint/prefer-string-starts-ends-with": "off",
      "no-useless-escape": "off"
    }
  },
  "ava": {
    "files": [
      "test/**/*.spec.{js,ts}"
    ]
  }
}
